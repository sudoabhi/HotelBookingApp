                            android:textSize="18sp"
                            android:id="@+id/event_name"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:background="@null"
                            android:fontFamily="@font/azo"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </RelativeLayout>


                <View
