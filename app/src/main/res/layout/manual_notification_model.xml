<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_margin="6dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:layout_height="wrap_content">

    <TextView

        android:layout_width="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:textSize="14sp"

        android:textColor="#CC000000"
        android:text="Event Name:- Hackathon"
        android:id="@+id/event_name"
        android:layout_height="wrap_content"/>


    <TextView

        android:layout_width="wrap_content"
        android:fontFamily="@font/azo"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:textSize="14sp"

        android:textColor="#CC000000"
        android:text="Ticket Name:- Hackathon (VIP)"
        android:id="@+id/ticket_name"
        android:layout_height="wrap_content"/>



    <TextView

        android:layout_width="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#CC000000"
        android:text="Hey this is a simple notifiscnl ssscs skchskjb cbshcvshc hjsv khsvchkv cbskjbc sjkcbbs"
        android:id="@+id/notification_title"
        android:layout_height="wrap_content">





    </TextView>

    <TextView

        android:layout_width="wrap_content"
        android:fontFamily="@font/azo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:textSize="16sp"
        android:textColor="#CC000000"
        android:text="Hey this is a simple notifiscnl ssscs skchskjb cbshcvshc hjsv khsvchkv cbskjbc sjkcbbs"
        android:id="@+id/notification_text"
        android:layout_height="wrap_content">





    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="2:45 AM"
            android:layout_toLeftOf="@id/notification_date"
            android:id="@+id/notification_time"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:text="17 Dec, 1987"
            android:id="@+id/notification_date"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>