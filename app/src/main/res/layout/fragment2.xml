<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/hotello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/azo"
                android:text="HotelLo"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotello"
                android:layout_marginTop="37dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/azo"
                android:text="Name *"
                android:textColor="#000"
                android:textSize="18sp" />



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@+id/textViewr">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLength="17"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:layout_marginHorizontal="8dp" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input3"
                android:layout_marginTop="37dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/azo"
                android:text="Create a User ID *"
                android:textColor="#000"
                android:textSize="18sp" />



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@+id/textView">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#000"
                    android:maxLength="17"
                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:layout_marginHorizontal="8dp" />

            </android.support.design.widget.TextInputLayout>





                <TextView
                    android:layout_below="@+id/input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/azo"
                    android:text="Gender *"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/gender_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_below="@+id/input"
                    android:layout_marginTop="60dp"
                    app:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:text="Choose"/>

                        <Spinner

                            android:id="@+id/gender"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:layout_height="40dp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_below="@+id/gender_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/azo"
                    android:text="Date of birth *"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input4"
                    android:layout_below="@id/gender_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="60dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_dob"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:hint="Select *"
                        android:imeOptions="actionDone"
                        android:clickable="true"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:textColor="#000"

                        />

                </android.support.design.widget.TextInputLayout>

                <!--    <EditText
                         android:layout_centerHorizontal="true"
                         android:id="@+id/et_user_name"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="100dp"
                         android:layout_width="200dp"
                         android:layout_height="40dp" />  -->

            <Button
                android:id="@+id/next_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="104dp"
                android:background="@drawable/round"
                android:backgroundTint="@color/secondGrey"
                android:foreground="?selectableItemBackground"
                android:text="NEXT"
                android:textSize="20sp" />

                <!--<View
                    android:id="@+id/v"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/next_viewpager"
                    android:layout_height="70dp"
                    android:background="@null" />-->

                <TextView
                android:id="@+id/textView3"
                android:layout_below="@+id/input4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/azo"
                android:text="No change in your NAME will be allowed."
                android:textColor="#000"
                android:textSize="12sp" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:indeterminate="true"
                    android:indeterminateTint="#000"
                    android:layout_height="wrap_content" />


        </RelativeLayout>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>






